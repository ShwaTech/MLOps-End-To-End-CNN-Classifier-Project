# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[.jenkins/*]
indent_size = 2

[.github/workflows/*]
indent_size = 2

[terraform/*]
indent_size = 2

[terraform/*/*]
indent_size = 2

[terraform/*/*/*]
indent_size = 2

[terraform/*/*/*/*]
indent_size = 2

[dvc.yaml]
indent_size = 2

[params.yaml]
indent_size = 2
